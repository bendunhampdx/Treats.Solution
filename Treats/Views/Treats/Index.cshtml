@{
  Layout = "_Layout";
}

@using Treats.Models;
@model List<Treats.Models.Treat>

<div class="jumbotron">
  <h1>Current Treat List</h1>
</div>

@if (Model.Count == 0)
{
  <p>No treats found</p>
}
else
{
  @foreach (Treat treat in Model)
  {
    @Html.ActionLink($"{treat.Name}", "Details", new{id = treat.TreatId})
    <br>
  }
}

<br>
@if (User.Identity.IsAuthenticated)
{
  <p>@Html.ActionLink("Create New Treat", "Create")</p>
}

<p>@Html.ActionLink("Return Home", "Index", "Home")</p>
<p>@Html.ActionLink("View All Flavors", "Index", "Flavors")</p>