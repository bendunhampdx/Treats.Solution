@{
  Layout = "_Layout";
}

@using Treats.Models;

<div class="jumbotron">
  <h1>Categories</h1>
</div>

@if (@Model.Count == 0)
{
  <h3>No Flavors have been added yet!</h3>
} 

<ul>
  @foreach(Flavor flavor in Model)
  {
    <li>@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId })</li>
  }
</ul>

<p class="btn btn-default">@Html.ActionLink("Add new flavor", "Create")</p>
<p class="btn btn-default">@Html.ActionLink("Home", "Index", "Home")</p>