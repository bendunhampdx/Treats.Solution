@{
  Layout = "_Layout";
}

@using System.Security.Claims

<div class="jumbotron">
  <h2>Log in or Register an account</h2>
</div>
<hr />
@if (User.Identity.IsAuthenticated)
{
  <h3>Hello @User.Identity.Name!</h3>
  @using (Html.BeginForm("LogOff", "Account"))
  {
    <input type="submit" class="btn btn-danger" value="Log out"/>
  }
}
else
{
  <p>@Html.ActionLink("Register", "Register")</p>
  <p class="btn btn-default">@Html.ActionLink("Log in", "Login")</p>
}
<br>
<p class="btn btn-warning">@Html.ActionLink("Home", "Index", "Home")</p>